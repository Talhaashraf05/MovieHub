@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Hub - Search Seat Reservations</title>
    <link href="~/Content/adminStyles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <style>

        .sidebar {
            margin-top: 10px;
            width: 200px;
            background-color: #55f5ff;
            padding: 10px;
            border-radius: 5px;
            float: left;
        }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

            .sidebar li {
                margin-bottom: 10px;
            }

            .sidebar a {
                display: block;
                padding: 8px;
                text-decoration: none;
                color: #333;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                }

        .content {
            margin-left: 220px; /* Adjust the margin to leave space for the sidebar */
            margin-bottom: 220px;
        }

    </style>
</head>
<body>
    <div class="sidebar">
        <ul>
            <li class="nav-item">@Html.ActionLink("Show Cinema", "ShowCinemaData", "Cinema")</li>
            <li class="nav-item">@Html.ActionLink("Add Movie", "CreateMovie", "MovieData")</li>
            <li class="nav-item">@Html.ActionLink("Show Moive", "ShowMovieData", "MovieData")</li>
            <li class="nav-item">@Html.ActionLink("Add Screen", "AddScreen", "Screen")</li>
            <li class="nav-item">@Html.ActionLink("Show Screens", "ShowScreenData", "Screen")</li>
            <li class="nav-item">@Html.ActionLink("Search Seat", "SearchSeat", "SeatReservation")</li>
        </ul>
    </div>

    <div class="content">
        <h1 class="text-center my-4">Search Seat Reservations</h1>
        @using (Html.BeginForm("SearchSeat", "SeatReservation", FormMethod.Post, new { @class = "mb-3" }))
        {
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="input-group">
                        @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Enter username" })
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
